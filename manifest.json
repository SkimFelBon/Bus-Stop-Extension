{
  "manifest_version": 2,
  "short_name": "Bus Stop",
  "name": "Bus Stop Extension",
  "description": "changes sizes of menu.",
  "version": "0.0.1",
  "icons": {
    "48": "icons/logo48.png",
    "96": "icons/logo96.png"
  },
  "permissions": [
    "*://podilsk.buses.in.ua/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.buses.in.ua/*"
      ],
      "js": [ "index.js" ],
      "css": [ "dist/menu-styles.css", "dist/menu-styles.min.css" ],
      "run_at": "document_start"
    }
  ]
}
